// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model app_users {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  username    String
  role        String   @default("user")
  country     String?
  nativeLang  String?
  targetLang  String?
  level       String?  // A1â€“C2
  createdAt   DateTime @default(now())
}
